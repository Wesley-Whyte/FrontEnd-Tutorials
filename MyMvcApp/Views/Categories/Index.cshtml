@model List<Category>

<h1>Categories</h1>
<br />

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td>
                        <a class="btn btn-link" asp-action="Edit" asp-route-id="@category.CategoryId">Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-link" asp-action="Delete" asp-route-id="@category.CategoryId"
                            onclick="return confirmDelete()">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No categories available.</p>
}

<div class="row mb-3">
    <div class="col-2">
        <a class="btn btn-primary" asp-action="Add">Add</a>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this category?");
        }
    </script>
}
